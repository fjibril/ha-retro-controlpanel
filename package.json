    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@vitest/ui": "^4.0.14",
    "eslint": "^9.36.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "rollup": "^4.50.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^1.1.1",
    "typescript": "^5.9.2",
    "vitest": "^4.0.14"
