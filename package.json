{
  "name": "ha-retro-control-panel",
  "version": "0.0.1",
  "description": "Home Assistant Retro Control Panel Card",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "rollup -c --watch --bundleConfigAsCjs --environment LIVERELOAD:true,LIVERELOAD_HOST:0.0.0.0,LIVERELOAD_PORT:35729",
    "build": "rollup -c --bundleConfigAsCjs",
    "format": "prettier --write .",
    "start:hass-stable": "docker run --rm -p8123:8123 -v ./.hass_dev:/config homeassistant/home-assistant:stable",
    "start:hass": "docker run --rm -p8123:8123 -v ./.hass_dev:/config homeassistant/home-assistant:beta",
    "start:hass-dev": "docker run --rm -p8123:8123 -v ./.hass_dev:/config homeassistant/home-assistant:dev",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "author": "Fahed Jibril",
  "repository": {
    "type": "git",
    "url": "https://github.com/tbd/tbd.git"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "custom-card-helpers": "^1.9.0",
    "lit": "^3.3.1",
    "rollup-plugin-import-lithtml": "^1.0.3"
  },
  "nonDepsDeleteMe": {
    "@material/mwc-select": "^0.27.0",
    "@material/mwc-textfield": "^0.27.0",
    "culori": "^4.0.1",
    "hammerjs": "^2.0.8",
    "home-assistant-js-websocket": "^9.5.0",
    "intl-messageformat": "^10.7.16",
    "memoize-one": "^6.0.0",
    "object-hash": "^3.0.0",
    "sortablejs": "^1.15.6",
    "superstruct": "^2.0.2"
  },
